<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:paddingTop="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:orientation="vertical">

        <View
            android:layout_width="0dp"
            android:layout_height="118dp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/img_shelf_other" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="3" />

        <RelativeLayout
            android:id="@+id/fl_content_1"
            android:layout_width="87dp"
            android:layout_height="123dp"
            android:visibility="invisible">

            <ImageButton
                android:id="@+id/iv_cover_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@mipmap/back_1"
                android:layout_alignParentBottom="true"
                android:transitionName="img_cover" />

            <View
                android:layout_width="match_parent"
                android:layout_height="26dp"
                android:layout_alignParentBottom="true"
                android:layout_gravity="bottom"
                android:background="#7f000000" />

            <TextView
                android:id="@+id/tv_name_1"
                android:layout_width="match_parent"
                android:layout_height="26dp"
                android:layout_gravity="center_horizontal|bottom"
                android:gravity="center"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:singleLine="true"
                android:textColor="#ffffff"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/delete_1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:visibility="gone"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:src="@mipmap/delete" />
        </RelativeLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="2" />

        <RelativeLayout
            android:id="@+id/fl_content_2"
            android:layout_width="87dp"
            android:layout_height="123dp"
            android:visibility="invisible">

            <ImageButton
                android:id="@+id/iv_cover_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@mipmap/back_1"
                android:layout_alignParentBottom="true"
                android:transitionName="img_cover" />

            <View
                android:layout_width="match_parent"
                android:layout_height="26dp"
                android:layout_alignParentBottom="true"
                android:layout_gravity="bottom"
                android:background="#7f000000" />

            <TextView
                android:id="@+id/tv_name_2"
                android:layout_width="match_parent"
                android:layout_height="26dp"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center_horizontal|bottom"
                android:gravity="center"
                android:maxLines="2"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:singleLine="true"
                android:textColor="#ffffff"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/delete_2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:visibility="gone"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:src="@mipmap/delete" />
        </RelativeLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="2" />

        <RelativeLayout
            android:id="@+id/fl_content_3"
            android:layout_width="87dp"
            android:layout_height="123dp"
            android:visibility="invisible">

            <ImageButton
                android:id="@+id/iv_cover_3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@mipmap/back_1"
                android:transitionName="img_cover" />

            <View
                android:layout_width="match_parent"
                android:layout_height="26dp"
                android:layout_alignParentBottom="true"
                android:layout_gravity="bottom"
                android:background="#7f000000" />

            <TextView
                android:id="@+id/tv_name_3"
                android:layout_width="match_parent"
                android:layout_height="26dp"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center_horizontal|bottom"
                android:gravity="center"
                android:maxLines="2"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:singleLine="true"
                android:textColor="#ffffff"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/delete_3"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:src="@mipmap/delete"
                android:visibility="gone" />

        </RelativeLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="3" />
    </LinearLayout>
</FrameLayout>